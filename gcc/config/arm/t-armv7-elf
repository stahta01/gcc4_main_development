MULTILIB_OPTIONS      = march=armv7-r
MULTILIB_DIRNAMES     = arm
MULTILIB_EXCEPTIONS   =
MULTILIB_MATCHES      =

MULTILIB_MATCHES      += marm=march?armv7-a
MULTILIB_MATCHES      += marm=march?armv7-r
MULTILIB_MATCHES      += marm=march?armv7-m
MULTILIB_MATCHES      += marm=mcpu?cortex-a8
MULTILIB_MATCHES      += marm=mcpu?cortex-r4
MULTILIB_MATCHES      += marm=mcpu?cortex-r4f
MULTILIB_MATCHES      += marm=mcpu?cortex-m3

MULTILIB_OPTIONS      += mfloat-abi=hard
MULTILIB_DIRNAMES     += fpu
MULTILIB_EXCEPTIONS   += mthumb/*mfloat-abi=hard*

MULTILIB_OPTIONS      += mlittle-endian/mbig-endian
MULTILIB_DIRNAMES     += le be
MULTILIB_MATCHES      += mbig-endian=mbe mlittle-endian=mle
